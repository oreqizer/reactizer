{
  "name": "@reactizer/bin",
  "version": "0.11.2",
  "description": "The ultimate React boilerplate's CLI!",
  "scripts": {},
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "engines": {
    "node": ">=12"
  },
  "bin": {
    "reactizer": "./bin/reactizer.js"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "yarn ci"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "subject-case": [
        2,
        "always",
        "sentence-case"
      ]
    }
  },
  "dependencies": {
    "chalk": "^3.0.0",
    "fs-extra": "^8.1.0",
    "glob": "^7.1.6",
    "ramda": "^0.26.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "babel-plugin-relay": "^6.0.0",
    "commitlint": "^8.2.0",
    "husky": "^3.0.9"
  },
  "license": "MIT"
}
