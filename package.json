{
  "name": "reactizer",
  "version": "0.1.7",
  "description": "The ultimate react boilerplate!",
  "main": "dist/server.js",
  "scripts": {
    "start": "rimraf dist && gulp && run-p devserver webpack:dev",
    "devserver": "yarn babel && run-p run:dev babel:dev",
    "run": "node dist/server",
    "run:dev": "nodemon dist/server",
    "render": "node dist/server/render",
    "bundle": "rimraf data dist && gulp && npm run babel && npm run webpack && npm run render",
    "babel": "babel src -d dist --ignore '**/__tests__/*'",
    "babel:dev": "babel src -d dist --ignore '**/__tests__/*' --watch --source-maps inline",
    "webpack": "webpack --config etc/webpack.build.js --mode production",
    "webpack:dev": "webpack-dev-server --config etc/webpack.dev.js --mode development --inline --hot",
    "test": "jest",
    "lint": "eslint .",
    "madge": "madge -c src/server/index.js src/client/index.js",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "build-storybook -o dist-storybook"
  },
  "bin": {
    "reactizer": "./bin/reactizer.js"
  },
  "keywords": [
    "react",
    "webpack",
    "boilerplate"
  ],
  "author": "oreqizer",
  "license": "MIT",
  "dependencies": {
    "fs-extra": "^6.0.1",
    "koa": "^2.5.1",
    "koa-logger": "^3.2.0",
    "koa-static": "^5.0.0",
    "prop-types": "^15.6.2",
    "ramda": "^0.25.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "styled-components": "^3.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.51",
    "@babel/core": "^7.0.0-beta.51",
    "@babel/preset-env": "^7.0.0-beta.51",
    "@babel/preset-flow": "^7.0.0-beta.51",
    "@babel/preset-react": "^7.0.0-beta.51",
    "@babel/preset-stage-2": "^7.0.0-beta.51",
    "assets-webpack-plugin": "^3.8.4",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^8.2.5",
    "babel-jest": "^23.0.1",
    "babel-loader": "8.0.0-beta.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-ramda": "^1.6.1",
    "babel-plugin-styled-components": "^1.5.1",
    "babel-preset-airbnb": "^2.5.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^5.0.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-import-resolver-babel-module": "^5.0.0-beta.0",
    "eslint-plugin-flowtype": "^2.49.3",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.6.1",
    "eslint-plugin-react": "^7.10.0",
    "flow-bin": "^0.75.0",
    "gulp": "^4.0.0",
    "i18n-webpack-plugin": "^1.0.0",
    "jest": "^23.1.0",
    "jest-styled-components": "^5.0.1",
    "madge": "^3.1.1",
    "nodemon": "^1.17.5",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.13.5",
    "raf": "^3.4.0",
    "rimraf": "^2.6.2",
    "webpack": "^4.12.1",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.4"
  }
}
