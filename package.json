{
  "name": "reactizer",
  "private": true,
  "scripts": {
    "prebuild": "rimraf packages/*/lib",
    "build": "gulp build",
    "test": "jest --passWithNoTests",
    "lint": "eslint '{packages,tools}/**/*.{js,ts,tsx}' '*.js'",
    "ci": "run-p ci:*",
    "ci:lerna": "lerna run ci --parallel",
    "ci:global": "run-p test lint",
    "preversion": "yarn ci",
    "prepublishOnly": "yarn build"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "tools/*"
    ]
  },
  "engines": {
    "node": ">=12"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@reactizer/babel-preset": "^0.29.0",
    "@reactizer/eslint-config": "^0.29.0",
    "@typescript-eslint/parser": "^4.6.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.12.1",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-filter": "^6.0.0",
    "gulp-plumber": "^1.2.1",
    "gulp-rename": "^2.0.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "lerna": "^3.22.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.0.5"
  }
}
