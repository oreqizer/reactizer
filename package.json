{
  "name": "reactizer",
  "private": true,
  "scripts": {
    "prebuild": "rimraf packages/*/lib",
    "build": "gulp build",
    "test": "jest --passWithNoTests",
    "lint": "eslint '{packages,tools}/**/*.{js,ts,tsx}' '*.js'",
    "ci": "run-p ci:*",
    "ci:lerna": "lerna run ci --parallel",
    "ci:global": "run-p test lint",
    "prepublish": "yarn ci && yarn build"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "tools/*"
    ]
  },
  "engines": {
    "node": ">=12"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.1",
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@reactizer/eslint-config": "*",
    "@typescript-eslint/parser": "^3.9.1",
    "babel-plugin-styled-components": "^1.11.1",
    "cross-env": "^7.0.2",
    "eslint": "^7.7.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-filter": "^6.0.0",
    "gulp-plumber": "^1.2.1",
    "gulp-rename": "^2.0.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "husky": "^4.2.5",
    "jest": "^26.4.0",
    "lerna": "^3.22.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^3.9.7"
  }
}
