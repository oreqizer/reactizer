{
  "name": "reactizer",
  "private": true,
  "scripts": {
    "prebuild": "rimraf packages/*/lib",
    "build": "gulp build",
    "test": "jest --passWithNoTests",
    "lint": "run-p lint:*",
    "lint:lerna": "lerna run types --parallel",
    "lint:global": "eslint '{packages,tools}/**/*.{js,ts,tsx}' '*.js'",
    "ci": "run-p ci:*",
    "ci:lerna": "lerna run ci --parallel",
    "ci:global": "run-p test lint",
    "prepublish": "yarn ci && yarn build"
  },
  "workspaces": {
    "packages": [
      "boilerplates/*",
      "packages/*",
      "tools/*"
    ]
  },
  "engines": {
    "node": ">=12"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "yarn ci"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.7.5",
    "@babel/core": "^7.7.5",
    "@reactizer/eslint-config": "*",
    "@typescript-eslint/parser": "^2.11.0",
    "babel-plugin-styled-components": "^1.10.6",
    "cross-env": "^6.0.3",
    "eslint": "^6.6.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-filter": "^6.0.0",
    "gulp-plumber": "^1.2.1",
    "gulp-rename": "^2.0.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "jest": "^24.9.0",
    "lerna": "^3.18.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.0",
    "typescript": "^3.7.3"
  }
}
