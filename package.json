{
  "name": "reactizer",
  "version": "0.9.2",
  "description": "The ultimate react boilerplate!",
  "main": "dist/server.js",
  "scripts": {
    "start": "rimraf dist && gulp && run-p devserver webpack:dev",
    "devserver": "yarn babel && run-p run:dev babel:dev",
    "run": "node dist/server",
    "run:dev": "nodemon dist/server",
    "render": "node dist/server/render",
    "bundle": "rimraf data dist && gulp && npm run babel && npm run webpack && npm run render",
    "babel": "babel src -d dist --ignore '**/__tests__/*'",
    "babel:dev": "babel src -d dist --ignore '**/__tests__/*' --watch --source-maps inline",
    "webpack": "webpack --config etc/webpack.build.js --mode production",
    "webpack:dev": "webpack-dev-server --config etc/webpack.dev.js --mode development --inline --hot",
    "test": "jest",
    "lint": "eslint './**/*.{js,jsx}'",
    "madge": "madge -c src/server/index.js src/client/index.js",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "build-storybook -o dist-storybook"
  },
  "bin": {
    "reactizer": "./bin/reactizer.js"
  },
  "keywords": [
    "react",
    "webpack",
    "boilerplate"
  ],
  "author": "oreqizer",
  "license": "MIT",
  "dependencies": {
    "fs-extra": "^7.0.1",
    "koa": "^2.6.1",
    "koa-logger": "^3.2.0",
    "koa-static": "^5.0.0",
    "node-polyglot": "^2.3.0",
    "prop-types": "^15.6.2",
    "ramda": "^0.25.0",
    "react": "^16.6.1",
    "react-dom": "^16.6.1",
    "react-hot-loader": "^4.3.12",
    "styled-components": "^4.0.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.5",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-optional-chaining": "^7.0.0",
    "@babel/plugin-transform-react-constant-elements": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.5",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@storybook/addon-actions": "4.0.4",
    "@storybook/addon-knobs": "^4.0.4",
    "@storybook/addon-links": "4.0.4",
    "@storybook/addons": "4.0.4",
    "@storybook/react": "4.0.4",
    "assets-webpack-plugin": "^3.9.7",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "8.0.4",
    "babel-plugin-id": "^1.0.1",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-ramda": "^1.6.3",
    "babel-plugin-styled-components": "^1.8.0",
    "babel-preset-airbnb": "^3.0.1",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^5.8.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-import-resolver-babel-module": "^5.0.0-beta.0",
    "eslint-plugin-flowtype": "^3.2.0",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "flow-bin": "^0.85.0",
    "gulp": "^4.0.0",
    "jest": "^23.6.0",
    "jest-styled-components": "^6.2.2",
    "madge": "^3.3.0",
    "nodemon": "^1.18.6",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.15.1",
    "raf": "^3.4.1",
    "rimraf": "^2.6.2",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  }
}
