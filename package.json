{
  "name": "reactizer",
  "version": "0.0.0",
  "description": "The ultimate react boilerplate!",
  "main": "dist/server/index.js",
  "scripts": {
    "start": "npm run clean && npm run build:server && run-p run run:dev",
    "run": "NODE_ENV=production node dist/server",
    "run:dev": "webpack-dev-server --config etc/webpack.dev.js --inline --hot",
    "bundle": "npm run clean && npm run build:server && npm run build:client",
    "bundle:min": "npm run clean && npm run build:server && cross-env NODE_ENV=production npm run build:client",
    "build:server": "webpack --config etc/webpack.server.js && npm run clean:server",
    "build:client": "webpack --config etc/webpack.build.js",
    "test": "echo 'TODO: add Jest + enzyme'",
    "lint": "eslint '**/*.{js,jsx}'",
    "flow": "flow",
    "flow:check": "flow check",
    "flow:install": "flow-typed install",
    "clean": "rimraf .tmp dist",
    "clean:server": "rimraf dist/server/index.css"
  },
  "keywords": [
    "react",
    "webpack",
    "isomorphic",
    "universal",
    "boilerplate"
  ],
  "author": "oreqizer",
  "license": "MIT",
  "dependencies": {
    "koa": "^2.3.0",
    "koa-logger": "^3.1.0",
    "koa-static": "^4.0.1",
    "normalize.css": "^7.0.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "styled-components": "^2.2.2"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-loader": "^7.1.2",
    "babel-preset-airbnb": "^2.4.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "cross-env": "^5.1.0",
    "css-loader": "^0.28.7",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-import-resolver-webpack": "^0.8.3",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "extract-text-webpack-plugin": "3.0.1",
    "flow-bin": "^0.57.3",
    "flow-typed": "^2.2.0",
    "npm-run-all": "^4.1.1",
    "rimraf": "^2.6.2",
    "style-loader": "^0.19.0",
    "webpack": "3.8.1",
    "webpack-dev-server": "2.9.3"
  }
}
