{
  "name": "reactizer",
  "private": true,
  "scripts": {
    "prebuild": "rimraf packages/*/lib",
    "build": "lerna run build",
    "test": "jest --passWithNoTests",
    "lint": "eslint 'packages/**/*.{js,ts,tsx}' '*.js'",
    "prettier": "prettier --check . || echo \"oops ðŸ™€ pls run 'yarn fmt'\"",
    "fmt": "prettier --write .",
    "ci": "run-p --print-label test lint prettier ci:workspaces",
    "ci:workspaces": "lerna run ci --parallel",
    "preversion": "yarn ci",
    "prepublishOnly": "yarn build"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "engines": {
    "node": ">=12"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.16.12",
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@reactizer/babel-preset": "*",
    "@reactizer/eslint-config": "*",
    "@typescript-eslint/parser": "^5.10.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.8.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.5"
  }
}
