{
  "name": "@reactizer/boil-lib",
  "version": "0.30.0",
  "description": "The best React library boilerplate!",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "author": "oreqizer <oreqizer@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prebuild": "yarn typegen",
    "build": "gulp build",
    "pretypegen": "rimraf lib",
    "typegen": "tsc",
    "posttypegen": "rimraf 'lib/**/*.{js,jsx}'",
    "types": "tsc --noEmit",
    "lint": "eslint './**/*.{js,ts,tsx}'",
    "test": "jest --passWithNoTests",
    "ci": "run-p types lint test",
    "prepublish": "yarn ci && yarn build",
    "release": "standard-version"
  },
  "engines": {
    "node": ">=12"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "yarn ci"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "peerDependencies": {
    "react": "^16.12.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.0",
    "@babel/plugin-proposal-class-properties": "^7.8.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.8.0",
    "@babel/plugin-proposal-optional-chaining": "^7.8.0",
    "@babel/plugin-transform-runtime": "^7.8.0",
    "@babel/preset-env": "^7.8.2",
    "@babel/preset-react": "^7.8.0",
    "@babel/preset-typescript": "^7.8.0",
    "@commitlint/cli": "^8.3.4",
    "@commitlint/config-conventional": "^8.3.4",
    "@reactizer/eslint-config": "^0.27.1",
    "@types/react": "^16.9.17",
    "@typescript-eslint/parser": "^2.15.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "eslint": "^6.8.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-plumber": "^1.2.1",
    "gulp-rename": "^2.0.0",
    "husky": "^4.0.7",
    "jest": "^24.9.0",
    "npm-run-all": "^4.1.5",
    "react": "^16.12.0",
    "rimraf": "^3.0.0",
    "standard-version": "^7.0.1",
    "typescript": "^3.7.4"
  }
}
